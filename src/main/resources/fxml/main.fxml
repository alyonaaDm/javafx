<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.kpfu.itis.controller.Controller"
            prefHeight="1280.0" prefWidth="7680">

    <HBox layoutY="20" spacing="5" layoutX="10">
        <TextField fx:id="username" minWidth="600" promptText="username"/>
        <Button fx:id="loginButton" minWidth="90">Войти</Button>
    </HBox>
    <HBox layoutY="60" spacing="10" layoutX="10">
        <Button fx:id="room1" disable="true">11-003</Button>
        <Button fx:id="room2" disable="true">11-003 Информатика</Button>
        <Button fx:id="room3" disable="true">Мои друзья</Button>
    </HBox>
    <ScrollPane minWidth="693" minHeight="300"
                maxWidth="400" maxHeight="400" layoutY="100" layoutX="10">
        <VBox fx:id="messages" spacing="5">
            <children/>
        </VBox>
    </ScrollPane>
    <HBox layoutY="400" layoutX="10" spacing="10">
        <TextField fx:id="messageText" minWidth="300" promptText="Введите сообщение" disable="true"/>
        <Button fx:id="sendMessage" minWidth="90" disable="true">Отправить</Button>
    </HBox>

</AnchorPane>
